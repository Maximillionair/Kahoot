<%- include('../partials/header') %>

<div class="game-lobby">
  <h1>Join a Game</h1>
  
  <div class="join-form">
    <form action="/game/join" method="POST" class="game-join-form">
      <div class="form-group">
        <label for="pin">Game PIN</label>
        <input 
          type="text" 
          id="pin" 
          name="pin" 
          required 
          pattern="[0-9]{6}" 
          maxlength="6"
          placeholder="Enter 6-digit PIN"
          class="pin-input"
        >
      </div>
      
      <div class="form-group">
        <label for="username">Your Nickname</label>
        <input 
          type="text" 
          id="username" 
          name="username" 
          required 
          maxlength="20"
          placeholder="Choose a nickname"
          class="username-input"
        >
      </div>
      
      <button type="submit" class="btn primary join-btn">Join Game</button>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
